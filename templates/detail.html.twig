{% extends "main.html.twig" %}

{% block header %}{% endblock %}
{% block content %}
	<div class="detailsbox">
		{% for record in data %}
			<div class="detail-container">
				<div class="detail-item">
					<img src="{{ record.afbeelding }}" style="width: 100%; height: 610px; object-fit: cover">
				</div>

				<div class="detail-text">

					<div class="container" style="justify-content: flex-start; padding-left: 0px; ">
						<div class="text-container person">4</div>
						<div class="text-container euro">
							{{record.prijs}},-
						</div>
						<div class="text-container calories">{{record.calorieën}}</div>
					</div>

					<div class="titlecontainer">
						<h1 class="title" style="color: #6e8722;">
							{{record.titel}}
						</h1>
						<div class="titlecontainer">
							<span class="star" data-value="1">☆</span>
							<span class="star" data-value="2">☆</span>
							<span class="star" data-value="3">☆</span>
							<span class="star" data-value="4">☆</span>
							<span class="star" data-value="5">☆</span>
						</div>
					</div>

					<div class="details">
						<h3 class="keuken green">{{record.keuken}}</h3>
						<div class="details">
							<h3 class="type green">{{record.type}}</h3>
						</div>
					</div>

					<div class="container" style="font-size: 15px;">
						{{record.korte_omschrijving}}
					</div>
					<div class="container" style="font-size: 15px;">
						{{record.lange_omschrijving}}
					</div>
					<div class="container" style="justify-content: space-between">
						<div class="button-container" style="padding-bottom: 15px">
							<a>
								Op lijst
							</a>
						</div>
						<div class="heart">♡</div>
					</div>
				</div>
			</div>
		</div>

		<div class="detailsbox" style="margin-top: 50px;">
			<div class="detail-container">
				<ul class="scrollable-list">
					{% for ingr in record.ingredienten %}
						<li style="list-style-type: "{{ingr.foto}}";">
							{# <div class="detail-item">
								<img src="{{ingr.foto}}" style="height: 150px; width: 150px; object-fit:cover">
							</div> #}

							<div class="detail-text">

								<h3 style="color: #6e8722; font-size: 50px">{{ ingr.naam }}</h3>
								<div style="max-width: 75%;">
									{{ingr.omschrijving}}
								</div>
								<h6 class="hoeveelheid green" style="margin-left: 0px;">
									{{(ingr.verpakking * ingr.aantal)}}
									{{ingr.eenheid}}
								</h6>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		{% endfor %}
	</div>
{% endblock %}
