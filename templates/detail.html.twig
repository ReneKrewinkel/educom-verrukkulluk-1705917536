{% extends "main.html.twig" %}

{% block header %}
	{% for record in data %}
		<header style="background: url('{{record.afbeelding}}'); background-size: cover; background-position: center">
		{% endfor %}

	{% endblock %}
	{% block content %}
	<div class="detailsbox">
		{% for record in data %}
			<div class="detail-container">
				<div class="detail-item" style="flex: 0 0 50%">
					<img src="{{ record.afbeelding }}" style="width: 100%; height: 610px; object-fit: cover">
				</div>

				<div class="detail-text">

					<div class="container" style="justify-content: flex-start; padding-left: 0px; ">
						<div class="text-container person">4</div>
						<div class="text-container euro">
							{{record.prijs}},-
						</div>
						<div class="text-container calories">{{record.calorieÃ«n}}</div>
					</div>

					<div class="titlecontainer">
						<h1 class="title" style="color: #6e8722;">
							{{record.titel}}
						</h1>
						<div class="titlecontainer">
							<span class="star" data-value="1" data-gerecht_id="{{record.ID}}"></span>
							<span class="star" data-value="2" data-gerecht_id="{{record.ID}}"></span>
							<span class="star" data-value="3" data-gerecht_id="{{record.ID}}"></span>
							<span class="star" data-value="4" data-gerecht_id="{{record.ID}}"></span>
							<span class="star" data-value="5" data-gerecht_id="{{record.ID}}"></span>
						</div>
					</div>

					<div class="details">
						<h3 class="keuken green">{{record.keuken}}</h3>
						<div class="details">
							<h3 class="type green">{{record.type}}</h3>
						</div>
					</div>

					<div class="container" style="font-size: 15px;">
						{{record.korte_omschrijving}}
					</div>
					<div class="container" style="font-size: 15px;">
						{{record.lange_omschrijving}}
					</div>
					<div class="container" style="justify-content: space-between">
						<div class="button-container toevoegen" style="padding-bottom: 15px">
							<a data-gerecht_id={{record.ID}}>
								Op lijst
							</a>
						</div>
						<div class="empty-heart" id="heart" data-gerecht_id="{{record.ID}}">&#x2661;</div>
					</div>
				</div>
			</div>
		</div>

		<div class="container-fluid" style="margin-top: 20px;">
			<ul class="nav nav-tabs" style="border-bottom: none;">
				<li class="nav-item">
					<a class="nav-link active" style="color: #6e8722; font-family: pretty_lilyregular; font-size: 30px" href="#ingredienten" data-toggle="tab">Ingredienten</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" style="color: #6e8722; font-family: pretty_lilyregular; font-size: 30px" href="#bereidingswijze" data-toggle="tab">Bereidingswijze</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" style="color: #6e8722; font-family: pretty_lilyregular; font-size: 30px" href="#opmerkingen" data-toggle="tab">Opmerkingen</a>
				</li>
			</ul>
			<div class="tab-content">
				<div id="ingredienten" class="tab-pane active">
					<div class="detailsbox">
						<div class="detail-container">
							<ul class="scrollable-list">
								{% for ingr in record.ingredienten %}
									<li class="d-flex align-items-center">
										<div class="detail-item" style="flex: 0 0 15%">
											<img src="{{ingr.foto}}" style="height: 150px; width: 150px; object-fit:cover; border-radius: 50%">
										</div>
										<div class="detail-text">
											<h3 style="color: #6e8722; font-size: 60px; margin-bottom: 10px;">{{ ingr.naam }}</h3>
											<div style="max-width: 50%;">
												{{ingr.omschrijving}}
											</div>
											<h6 class="hoeveelheid green" style="margin-left: 0px;">
												{{(ingr.verpakking * ingr.aantal)}}
												{{ingr.eenheid}}
											</h6>
										</div>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="arrow-container">
							<div class="arrow-down">&#x2304;</div>
						</div>
					</div>
				</div>
				<div id="bereidingswijze" class="tab-pane">
					<div class="detailsbox">
						<div class="detail-container">
							<ul class="scrollable-list" style="margin-top: 20px">
								{% for prep in record.bereidingswijze %}
									<li class="d-flex align-items-center" style="margin-top: 20px">
										<div class="detail-item" style="width: 75px; height: 75px; border-radius: 50%; background-color: #eb8d1f; text-align: center; line-height: 75px; color: #FFF; font-size: 50px">
											{{prep.nummeriekveld}}.
										</div>
										<div class="detail-text">
											<div style="max-width: 100%;">
												{{prep.tekstveld}}
											</div>
										</div>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="arrow-container">
							<div class="arrow-down">&#x2304;</div>
						</div>
					</div>
				</div>
				<div id="opmerkingen" class="tab-pane">
					<div class="detailsbox">
						<div class="detail-container">
							<ul class="scrollable-list">
								{% for opmerking in record.opmerkingen %}
									<li class="d-flex align-items-center">
										<div class="detail-item">
											<img src="{{ opmerking.afbeelding }}" style="height: 100px; width: 100px; border-radius: 50%; border: 5px solid #eb8d1f">
										</div>
										<div class="detail-text">
											<h3 style="color: #6e8722; font-size: 50px; margin-bottom: 5px;">{{ opmerking.user_name }}</h3>
											<div style="max-width: 100%;">
												{{opmerking.tekstveld}}
											</div>
										</div>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="arrow-container">
							<div class="arrow-down">&#x2304;</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endfor %}{% endblock %}
